    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug with Meson",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/builddir/src/line-wrapper",
            "args": [
                ""
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Meson: Build all targets"
        },
        {
            "name": "Test a string",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/builddir/src/line-wrapper",
            "args": [
                "--use-hyphens",
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Meson: Build all targets"
        }
    ]
}